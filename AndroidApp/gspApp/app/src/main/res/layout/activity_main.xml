<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adrian.gspapp.MainActivity">

    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="499dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="6dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtUsername"
            android:layout_alignEnd="@+id/textSignup"
            android:layout_marginBottom="35dp"
            android:layout_marginEnd="56dp"
            app:srcCompat="@drawable/loginicon" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_above="@+id/textSignup"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="51dp"
            android:layout_marginStart="37dp"
            android:text="Login"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="287dp" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="282dp"
            android:layout_height="44dp"
            android:layout_above="@+id/btnLogin"
            android:layout_alignEnd="@+id/btnLogin"
            android:layout_alignStart="@+id/btnLogin"
            android:layout_marginBottom="46dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="194dp" />

        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="281dp"
            android:layout_height="39dp"
            android:layout_above="@+id/txtPassword"
            android:layout_alignEnd="@+id/btnLogin"
            android:layout_alignStart="@+id/txtPassword"
            android:layout_marginBottom="52dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="94dp" />

        <TextView
            android:id="@+id/textSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textForgot"
            android:layout_alignBottom="@+id/textForgot"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/textForgot"
            android:text="Sign Up"
            android:textColor="@android:color/holo_blue_dark"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="371dp" />

        <TextView
            android:id="@+id/textForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnLogin"
            android:layout_marginBottom="54dp"
            android:text="Forgot your password?"
            android:textColor="@android:color/holo_blue_dark"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="371dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
