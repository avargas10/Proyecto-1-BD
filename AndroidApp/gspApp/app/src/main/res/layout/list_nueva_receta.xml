<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgCheck"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="14dp"
        android:layout_alignBottom="@+id/txtCodigoProductoRecetas"
        android:layout_alignParentEnd="true" />

    <LinearLayout

        android:id="@+id/thumbnail"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"

        android:layout_marginRight="5dip"

        android:padding="3dip">

        <ImageView

            android:id="@+id/imgRecetas"

            android:layout_width="100dip"

            android:layout_height="100dip"

            android:contentDescription="@string/app_name"></ImageView>
    </LinearLayout>

    <TextView

        android:id="@+id/txtProductoRecetas"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_centerVertical="true"

        android:layout_marginLeft="125dip"

        android:layout_toRightOf="@+id/img"

        android:paddingBottom="10dip"

        android:text="test"

        android:textColor="#040404"
        android:textSize="20dip"

        android:textStyle="bold"

        android:typeface="sans"></TextView>
    <!-- Weather Information-->
    <TextView

        android:id="@+id/txtCodigoProductoRecetas"

        android:layout_width="200dp"

        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/txtProductoRecetas"

        android:layout_below="@+id/txtProductoRecetas"

        android:paddingTop="25dip"
        android:text="test price"

        android:textColor="#343434"

        android:textSize="15dip"></TextView>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtCodigoProductoRecetas"
        android:layout_toEndOf="@+id/txtCodigoProductoRecetas" />

</RelativeLayout>